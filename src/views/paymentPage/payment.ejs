<%- include('../partials/head')%>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
	<body>
		<form id="cardForm" action="/products/buy/<%= providerId%>" class="container">
			<div class="cardForm__container">
				<img src="/images/logoAzvi.png" class="container__logo" alt="" />
				<div class="container__img">
					<div class="container__chip">
						<img src="/images/chip.png" alt="" />
					</div>
					<div class="container__dataCard">
						<div class="container__numbers" id="numbers">XXXX - XXXX - XXXX - XXXX</div>
						<div class="container__name" id="name">Nombre y apellido</div>
						<div class="container__expiration" id="expiration">
							<div><span id="month">MM</span>/<span id="year">AA</span></div>
							<div>Cvv <span id="cvv">xxx</span></div>
						</div>
					</div>
				</div>
				<div class="container__data">
					<label for="name">Nombre y apellido <span class="error_name error"></span></label>
					<input type="text" maxlength="30" id="nameInput" name="name" autocomplete="new-name" />
					<label for="numbers">N° de tarjeta <span class="error_numbers error"></span></label>
					<input type="number" id="numbersInput" name="numbers" maxlength="16" autocomplete="new-numbers" />

					<div class="container__date">
						<p for="">Vencimiento <span class="error_month error_year error"></span></p>
						<select name="month" id="monthSelect">
							<option hidden value="">Mes</option>
						</select>

						<select name="year" id="yearSelect">
							<option hidden value="">Año</option>
						</select>
					</div>
					<div class="container__cvv">
						<label for="cvv">Cvv <span class="error_cvv error"></span></label>
						<input type="number" name="cvv" id="cvvInput" />
					</div>
				</div>
			</div>
			<button id="payButton" class="payButton">Pagar</button>
		</form>

		 
        <script type="module" src="/javascripts/payment.js"></script>

	</body>
</html>
